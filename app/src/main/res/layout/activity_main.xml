<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/working"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/grey"
        android:gravity="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/grey"
        android:gravity="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear"
                style="@style/mainButtonStyle"
                android:text="CE"/>

            <TextView
                android:id="@+id/open"
                style="@style/mainButtonStyle"
                android:text="("/>

            <TextView
                android:id="@+id/close"
                style="@style/mainButtonStyle"
                android:text=")"/>

            <TextView
                android:id="@+id/div"
                style="@style/mainButtonStyle"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven"
                style="@style/numbersButtonStyle"
                android:text="7"/>
            <TextView
                android:id="@+id/eight"
                style="@style/numbersButtonStyle"
                android:text="8"/>
            <TextView
                android:id="@+id/nine"
                style="@style/numbersButtonStyle"
                android:text="9"/>
            <TextView
                android:id="@+id/multi"
                style="@style/mainButtonStyle"
                android:text="*"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                style="@style/numbersButtonStyle"
                android:text="4"/>
            <TextView
                android:id="@+id/five"
                style="@style/numbersButtonStyle"
                android:text="5"/>
            <TextView
                android:id="@+id/six"
                style="@style/numbersButtonStyle"
                android:text="6"/>
            <TextView
                android:id="@+id/minus"
                style="@style/mainButtonStyle"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                style="@style/numbersButtonStyle"
                android:text="1"/>
            <TextView
                android:id="@+id/two"
                style="@style/numbersButtonStyle"
                android:text="2"/>
            <TextView
                android:id="@+id/three"
                style="@style/numbersButtonStyle"
                android:text="3"/>
            <TextView
                android:id="@+id/plus"
                style="@style/mainButtonStyle"
                android:text="+"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                style="@style/numbersButtonStyle"
                android:text="."/>
            <TextView
                android:id="@+id/zero"
                style="@style/numbersButtonStyle"
                android:text="0"/>
            <TextView
                android:id="@+id/back"
                style="@style/numbersButtonStyle"
                android:text="âŒ¦"/>
            <TextView
                android:id="@+id/equals"
                style="@style/mainButtonStyle"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>